<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Existing entries -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>SahilStats uses your location to automatically fill in the game location, making it easier to track where games are played.</string>
    
    <key>NSLocationUsageDescription</key>
    <string>SahilStats uses your location to automatically fill in the game location.</string>
    
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>CFBundleURLName</key>
            <string>com.narayan.SahilStats.GoogleSignIn</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>com.googleusercontent.apps.203118165866-b5v9su9uq894b6n07kjd80ij8ou0fkq3</string>
            </array>
        </dict>
    </array>
    
    <!-- NEW: Camera and Photos Permissions -->
    <key>NSCameraUsageDescription</key>
    <string>SahilStats uses the camera to record game videos with live score overlays, creating memorable highlights of your basketball games.</string>
    
    <key>NSMicrophoneUsageDescription</key>
    <string>SahilStats uses the microphone to record audio along with game videos, capturing the full atmosphere of your basketball games.</string>
    
    <key>NSPhotoLibraryUsageDescription</key>
    <string>SahilStats accesses your photo library to save game screenshots, video highlights, and organize your basketball memories in a dedicated SahilStats album.</string>
    
    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>SahilStats saves game screenshots and video highlights to your photo library, preserving your basketball memories and achievements.</string>
    
    <!-- Optional: If you want to access all photos -->
    <key>PHPhotoLibraryPreventAutomaticLimitedAccessAlert</key>
    <false/>
    
    <!-- Video recording capabilities -->
    <key>UIBackgroundModes</key>
    <array>
        <string>audio</string>
        <string>background-processing</string>
    </array>
    
    <!-- Required device capabilities -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>camera-flash</string>
        <string>video-camera</string>
        <string>microphone</string>
    </array>
    
    <!-- Supported interface orientations for recording -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
</dict>
</plist>
